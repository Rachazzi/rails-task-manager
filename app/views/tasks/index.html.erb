<h1>All Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed == true %>
        <input type='checkbox' checked>
      <% else %>
        <input type='checkbox'>
      <% end %>
    <%= link_to task.title, task_path(task) %>
    </li>
  <% end %>
</ul>

<%= link_to "+ Add a new task", tasks_new_path %>
